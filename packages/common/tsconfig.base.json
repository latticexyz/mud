// Please take care editing this! All of our packages and templates extend this base config.
{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Bundler",
    "target": "es2021",
    "lib": [
      "ESNext",
      // This is temporarily added until we can unbundle JS files and only include this when we import things that use DOM APIs
      // TODO: fix me
      "DOM"
    ],
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    // TODO: enable this
    // "noUncheckedIndexedAccess": true,
    "sourceMap": true
  }
}
