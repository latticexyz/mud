{
  "name": "@latticexyz/std-client",
  "version": "1.42.0",
  "description": "Standard library for MUD client.",
  "repository": {
    "type": "git",
    "url": "https://github.com/latticexyz/mud.git",
    "directory": "packages/std-client"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./dev": "./dist/dev/index.js"
  },
  "typesVersions": {
    "*": {
      "index": [
        "./src/index.ts"
      ],
      "dev": [
        "./src/dev/index.ts"
      ]
    }
  },
  "scripts": {
    "build": "pnpm run build:mud && pnpm run build:js",
    "build:js": "tsup",
    "build:mud": "tsx ./scripts/tsgen.ts",
    "clean": "pnpm run clean:mud && pnpm run clean:js",
    "clean:js": "rimraf dist",
    "clean:mud": "rimraf src/mud-definitions",
    "dev": "tsup --watch",
    "docs": "rimraf API && typedoc src && find API -type f -name '*.md' -exec sed -E -i \"\" \"s/(#.*)(<.*>)/\\1/\" {} \\;",
    "release": "npm publish --access=public",
    "test": "pnpm run build:mud && vitest typecheck --run"
  },
  "dependencies": {
    "abitype": "^0.8.2",
    "viem": "^0.3.18"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@latticexyz/cli": "workspace:*",
    "@latticexyz/config": "workspace:*",
    "@latticexyz/network": "workspace:*",
    "@latticexyz/recs": "workspace:*",
    "@latticexyz/solecs": "workspace:*",
    "@latticexyz/store": "workspace:*",
    "@latticexyz/utils": "workspace:*",
    "@latticexyz/world": "workspace:*",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/react": "^18.2.6",
    "@types/react-collapse": "^5.0.1",
    "@types/uuid": "^8.3.4",
    "ethers": "^5.7.2",
    "lodash": "^4.17.21",
    "mobx": "^6.7.0",
    "react": "^18.2.0",
    "react-collapse": "^5.1.1",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "tslib": "^2.5.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typedoc": "0.23.21",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.9.5",
    "vitest": "0.30.1"
  },
  "peerDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@latticexyz/network": "latest",
    "@latticexyz/recs": "latest",
    "@latticexyz/solecs": "latest",
    "@latticexyz/store": "latest",
    "@latticexyz/utils": "latest",
    "@latticexyz/world": "latest",
    "ethers": "^5.7.2",
    "lodash": "^4.17.21",
    "mobx": "^6.7.0",
    "react": "^18.2.0",
    "react-collapse": "^5.1.1",
    "react-dom": "^18.2.0",
    "rxjs": "^7.5.5"
  },
  "gitHead": "914a1e0ae4a573d685841ca2ea921435057deb8f"
}
