{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
  },
  "include": ["src"],
  "exclude": ["dist", "**/*.test.ts"]
}
