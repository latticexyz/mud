{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "abi/**",
        "build/**",
        "bin/**",
        "protoc/**",
        "protobuf/**",
        "src/mud-definitions/**",
        ".parcel-cache/**"
      ]
    },
    "create-mud#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["package.json", "src/**", "../../templates/**"]
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
