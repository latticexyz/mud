{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "out/**", "build/**", "bin/**", ".next/**", "!docs/.next/**"]
    },
    "create-mud#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["package.json", "src/**", "../../templates/**"]
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalPassThroughEnv": ["COREPACK_HOME"]
}
