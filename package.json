{
  "name": "mud",
  "version": "0.0.0",
  "description": "A toolkit for building on-chain worlds",
  "repository": {
    "type": "git",
    "url": "https://github.com/latticexyz/mud.git"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.15.0",
    "husky": ">=6",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "prettier": "^2.6.2",
    "run-pty": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "prepare": "husky install && cd packages/cli && npm link && cd .. && yarn lerna run prepare",
    "commit": "cz",
    "prettier:check": "prettier --check 'packages/**/*.ts'",
    "prettier": "prettier --write 'packages/**/*.ts'",
    "lint": "eslint . --ext .ts",
    "lerna:release": "lerna version --conventional-commits --yes",
    "lerna:publish": "lerna publish --no-private --force-publish",
    "foundryup": "curl -L https://foundry.paradigm.xyz | bash && exec \"$SHELL\" && foundryup",
    "link:packages": "yarn lerna run link"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,css,md,sol}": "prettier --write"
  }
}
