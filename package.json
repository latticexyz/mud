{
  "name": "mud",
  "version": "0.0.0",
  "description": "A toolkit for building on-chain worlds",
  "repository": "https://github.com/latticexyz/mud.git",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/ri/*"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.15.0",
    "husky": ">=6",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "prettier": "^2.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "cz",
    "prettier:check": "prettier --check 'packages/**/*.ts'",
    "prettier": "prettier --write 'packages/**/*.ts'",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,css,md,sol}": "prettier --write"
  }
}
